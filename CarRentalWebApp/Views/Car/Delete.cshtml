@model CarRentalWebApp.Models.Car

@{
    ViewData["Title"] = "Delete Car";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this car?</h3>
<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarModel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarModel)
        </dd>

        <!-- Include other important details of the car you want to display -->

    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CarId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Cancel</a>
    </form>
</div>
