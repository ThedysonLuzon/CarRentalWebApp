@model CarRentalWebApp.Models.Car

@{
    ViewData["Title"] = "Edit Car";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="carid" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Car Model -->
    <div class="form-group">
        <label asp-for="carmodel" class="control-label"></label>
        <input asp-for="carmodel" class="form-control" />
        <span asp-validation-for="carmodel" class="text-danger"></span>
    </div>

    <!-- Insurance Amount -->
    <div class="form-group">
        <label asp-for="insuranceamount" class="control-label"></label>
        <input asp-for="insuranceamount" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="insuranceamount" class="text-danger"></span>
    </div>

    <!-- Include other fields in a similar manner -->
    <!-- Fuel Type -->
    <div class="form-group">
        <label asp-for="fueltype" class="control-label"></label>
        <input asp-for="fueltype" class="form-control" />
        <span asp-validation-for="fueltype" class="text-danger"></span>
    </div>

    <!-- Mileage -->
    <div class="form-group">
        <label asp-for="mileage" class="control-label"></label>
        <input asp-for="mileage" class="form-control" />
        <span asp-validation-for="mileage" class="text-danger"></span>
    </div>

    <!-- Add other fields here like noofdoors, rentalpriceperday, luggagespace, etc. -->
    <!-- Save button -->
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
