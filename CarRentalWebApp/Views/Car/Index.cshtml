@model IEnumerable<CarRentalWebApp.Models.Car>

@{
    ViewData["Title"] = "Cars";
}

<h2>@ViewData["Title"]]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Model</th>
            <th>Fuel Type</th>
            <th>Mileage</th>
            <th>Rental Price Per Day</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.carid</td>
                <td>@car.carmodel</td>
                <td>@car.fueltype</td>
                <td>@car.mileage</td>
                <td>@car.rentalpriceperday</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@car.carid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@car.carid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@car.carid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create New Car</a>
