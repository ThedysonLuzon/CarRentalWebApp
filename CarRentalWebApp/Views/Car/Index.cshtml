@model IEnumerable<CarRentalWebApp.Models.Car>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #ddd;
    }
        a:hover {
            background-color: #45a049;
        }

    form {
        margin-bottom: 20px;
    }
</style>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form method="get" action="@Url.Action("Index")">
    <button type="submit">Get All Cars</button>
</form>

<form method="get" action="@Url.Action("GetCarById")">
    <button type="submit">Get Car by ID</button>
    <input type="text" name="id" placeholder="Enter Car ID" required />
</form>

<form method="get" action="@Url.Action("Create")">
    <button type="submit">Create New Car</button>
</form>

<table>
    <thead>
        <tr>
            <th>Car Model</th>
            <th>Fuel Type</th>
            <th>Mileage</th>
            <th>Rental Price Per Day</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.CarModel</td>
                <td>@car.FuelType</td>
                <td>@car.Mileage</td>
                <td>$@car.RentalPricePerDay per day</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = car.CarId })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = car.CarId })" onclick="return confirm('Are you sure you want to delete this?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
