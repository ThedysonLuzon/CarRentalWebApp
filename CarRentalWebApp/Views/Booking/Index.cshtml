@model IEnumerable<CarRentalWebApp.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Customer Name</th>
            <th>Number of People</th>
            <th>Luggage Space</th>
            <th>Insurance Needed</th>
            <th>Booking Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Bookingid</td>
                <td>@booking.Customername</td>
                <td>@booking.Numberofpeople</td>
                <td>@booking.Luggagespace</td>
                <td>@booking.InsuranceNeeded</td>
                <td>
                    @if (booking.Bookingdate.HasValue)
                    {
                        @booking.Bookingdate.Value.ToShortDateString()
                    }
                    else
                    {
                        <text>Not Set</text>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@booking.Bookingid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@booking.Bookingid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@booking.Bookingid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create New Booking</a>
