@model CarRentalWebApp.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="customername" class="control-label">Customer Name</label>
        <input asp-for="customername" class="form-control" />
        <span asp-validation-for="customername" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="numberofpeople" class="control-label">Number of People</label>
        <input asp-for="numberofpeople" class="form-control" />
        <span asp-validation-for="numberofpeople" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="luggagespace" class="control-label">Luggage Space</label>
        <input asp-for="luggagespace" class="form-control" />
        <span asp-validation-for="luggagespace" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="insuranceneeded" class="control-label">Insurance Needed</label>
        <select asp-for="insuranceneeded" class="form-control">
            <option value="">Please select</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="insuranceneeded" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="bookingdate" class="control-label">Booking Date</label>
        <input asp-for="bookingdate" class="form-control" type="date" />
        <span asp-validation-for="bookingdate" class="text-danger"></span>
    </div>

    <!-- Include other fields as necessary -->

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
